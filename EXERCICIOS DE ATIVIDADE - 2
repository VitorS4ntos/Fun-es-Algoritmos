#include <iostream>
using namespace std;

void data(int dia, int mes, int ano){
  switch(mes){
  case 1:
    cout<<dia<<" de janeiro de "<<ano;
    break;
  case 2:
    cout<<dia<<" de fevereiro de "<<ano;
    break;
  case 3:
    cout<<dia<<" de marÃ§o de "<<ano;
    break;
  case 4:
    cout<<dia<<" de abril de "<<ano;
    break;
  case 5:
    cout<<dia<<" de maio de "<<ano;
    break;
  case 6:
    cout<<dia<<" de junho de "<<ano;
    break;
  case 7:
    cout<<dia<<" de julho de "<<ano;
    break;
  case 8:
    cout<<dia<<" de agosto de "<<ano;
    break;
  case 9:
    cout<<dia<<" de setembro de "<<ano;
    break;
  case 10:
    cout<<dia<<" de outubro de "<<ano;
    break;
  case 11:
    cout<<dia<<" de novembro de "<<ano;
    break;
  case 12:
    cout<<dia<<" de dezembro de "<<ano;
    break;
  }
}
int main (){
  int dia, mes, ano;
  cin>>dia>>mes>>ano;
  data(dia, mes, ano);

  return 0;
}
